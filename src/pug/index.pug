doctype html
html(lang="en")
    head
        title= 'htask3'
        link(href='css/main.css' rel='stylesheet')
    body
        .content
            .links.hidden
                header.links__header
                    h1 Киноглушитель
                section.links__wrap
                    form(class='links-form')
                        input(
                        type='text'
                        name='video'
                        class='links-form__input links-form__video'
                        placeholder='Ссылка на видео'
                        )
                        input(
                        type='text'
                        name='sub'
                        class='links-form__input links-form__sub'
                        placeholder='Ссылка на субтитры'
                        )
                        input(
                        type='text'
                        name='audio'
                        class='links-form__input links-form__audio'
                        placeholder='Ссылка на саундтрек'
                        )
                        button(
                        class='links-form__button links-form__submit'
                        ) Заглушить
            
            .player
                section
                    video.player__video(width='700' height='400' muted)
                        source(src='video/sherlock.mp4' type='video/mp4')
                        // source(src='https://cache-default01f.cdn.yandex.net/kp.cdn.yandex.net/502838/kinopoisk.ru-Sherlock-284167.mp4' type='video/mp4')
                section
                    audio.player__audio(src='audio/The_Entertainer_-_1902_-_By_Scott_Joplin.ogg')
                section
                    canvas.player__canvas
        script(src='js/main.js' type='text/javascript')
        
        
        
